{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="/js/moment.min.js"></script>
    <script type="text/javascript" src="/js/bootstrap-datetimepicker.min.js"></script>

    <script type="text/javascript">
        $(function () {
            $('#dateReservation').datetimepicker({
                format : 'DD/MM/YYYY HH:mm'
            });

            var reservationForm = $('#reservation_form');
            var reservationUrl = '{{ path('tim_frontend_reservation') }}';
            sendForm(reservationForm, reservationUrl);

            var feedbackForm = $('#filldetails');
            var feedbackUrl = '{{ path('tim_frontend_feedback') }}';
            sendForm(feedbackForm, feedbackUrl);

            function sendForm(form, url) {
                form.submit(function (e) {
                    e.preventDefault();

                    var data = form.serialize();

                    $.ajax({
                        type: 'POST',
                        url: url,
                        data: data,
                        dataType: 'json',
                        success: function (data) {
                            // console.log('Success');
                            // console.log('Data', data);

                            // clear form
                            form[0].reset();

                            // todo: add bootstrap modal popup to show thank you
                            alert(data.message);
                        },
                        error: function (data) {
                            // console.log('Error');
                            // console.log('Data', data);

                            // todo: add bootstrap modal popup to show error
                            alert(data.message);
                        }
                    });
                });
            }
        });
    </script>
{% endblock javascripts %}